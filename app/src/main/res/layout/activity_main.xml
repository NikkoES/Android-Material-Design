<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    tools:context=".activity.MainActivity">

    <Button
        android:id="@+id/btn_navigation_drawer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Navigation View"
        android:background="@color/colorPrimary"
        android:textColor="#fff"/>

    <Button
        android:id="@+id/btn_tab_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="Tab Layout"
        android:background="@color/colorPrimary"
        android:textColor="#fff"/>

    <Button
        android:id="@+id/btn_bottom_navigation_bar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="Bottom Navigation Bar"
        android:background="@color/colorPrimary"
        android:textColor="#fff"/>

    <Button
        android:id="@+id/btn_floating_text_input_snack_bar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="FAB, Text Input Layout, Snack bar"
        android:background="@color/colorPrimary"
        android:textColor="#fff"/>

</LinearLayout>